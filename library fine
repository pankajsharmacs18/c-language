#include <stdio.h>


int main() {
int d,m,y,d1,m1,y1;
scanf("%d %d %d",&d,&m,&y);
scanf("%d %d %d",&d1,&m1,&y1);
if(y<=y1){
if(y<y1){
    printf("0");
}
else{
    if(m<=m1){
        if(m<m1){
            printf("0");
        }
        else{
            if(m>m1){
            printf("%d",500*(m-m1));
        }
        else{
            if(d<d1){
                printf("0");
            }
            else{
                printf("%d",15*(d-d1));
            }
        }
        }
    }
}
}
else{
printf(10000);
}    
return 0;
}

