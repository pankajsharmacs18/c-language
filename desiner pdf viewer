
#include <stdio.h>


char* readline();

// Complete the utopianTree function below.
int utopianTree(int n) {


}

int main()
{ int height = 1;
    for(int i = 1; i < n+1; i++){
        if(i % 2 == 0){ // even cycle tree grows by 1
            height += 1;            
        }
        else{ // odd cycle tree doubles
            height *= 2;
        }
    }
    return height;
}
